@model IEnumerable<OR.SisProductosEN.ProductoEN>  

@{  
    ViewBag.Title = "Index";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}  

<h2 class="text-center my-4">Productos</h2>  

<div class="d-flex justify-content-between mb-4">  
    <div>  
        @Html.ActionLink("➕ Crear Nuevo", "Create", null, new { @class = "btn btn-success btn-lg shadow-sm me-2", style = "border-radius: 10px; transition: 0.3s;" })  
        @Html.ActionLink("📊 Reporte", "ReporteProductos", null, new { @class = "btn btn-info btn-lg shadow-sm me-2", style = "border-radius: 10px; transition: 0.3s;" })  
        @Html.ActionLink("🧮 Reporte Excel", "ReporteProductosExcel", null, new { @class = "btn btn-info btn-lg shadow-sm", style = "border-radius: 10px; transition: 0.3s;" })  
    </div>  
</div>  

<div class="card mb-4">  
    <div class="card-body">  
        <form asp-action="SubirExcelProductos" asp-controller="Producto" method="post" enctype="multipart/form-data">  
            <div class="form-group">  
                <label for="archivoExcel">Subir Archivo Excel</label>  
                <input type="file" name="archivoExcel" required class="form-control" />  
            </div>  
            <button type="submit" class="btn btn-primary mt-3">Subir y Guardar</button>  
        </form>  
    </div>  
</div>  

<table class="table table-hover table-bordered text-center align-middle">  
    <thead class="table-dark">  
        <tr>  
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>  
            <th>@Html.DisplayNameFor(model => model.Precio)</th>  
            <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>  
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>  
            <th class="text-center">Acciones</th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var item in Model)  
        {  
            <tr>  
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>  
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>  
                <td>@Html.DisplayFor(modelItem => item.CantidadDisponible)</td>  
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>  
                <td class="text-center">  
                    @Html.ActionLink("✏️ Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm me-2 shadow-sm", style = "border-radius: 5px;" })  
                    @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm shadow-sm", style = "border-radius: 5px;" })  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>  

@section Scripts {  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>  
    <script>  
        $(document).ready(function () {  
            $(".btn").hover(function () {  
                $(this).css("transform", "scale(1.05)");  
            }, function () {  
                $(this).css("transform", "scale(1)");  
            });  
        });  
    </script>  
}  